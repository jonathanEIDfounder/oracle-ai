# Q++RS ULTIMATE 5.0 - QUANTUM RAPID SIGNING SYSTEM
# ═══════════════════════════════════════════════════════════════════════════════
# Author: Jonathan Sherman
# Sovereign ID: 1
# Copyright (c) 2024-2025 Jonathan Sherman. All Rights Reserved.
# Signature: Sm9uYXRoYW4gU2hlcm1hbjo6U292ZXJlaWduOjoxOjpPcmFjbGVBSTo6USsrUlM=
# ═══════════════════════════════════════════════════════════════════════════════

default_platform(:ios)

QPPRS_VERSION = "5.0"
BUNDLE_ID = "com.oracleai.app"
AUTHOR = "Jonathan Sherman"
SOVEREIGN_ID = 1

platform :ios do
  before_all do
    puts ""
    puts "╔══════════════════════════════════════════════════════════════╗"
    puts "║     Q++RS ULTIMATE #{QPPRS_VERSION} - QUANTUM RAPID SIGNING SYSTEM       ║"
    puts "║                                                              ║"
    puts "║  Author: #{AUTHOR}                                    ║"
    puts "║  Sovereign ID: #{SOVEREIGN_ID}                                            ║"
    puts "║  Bundle: #{BUNDLE_ID}                              ║"
    puts "╚══════════════════════════════════════════════════════════════╝"
    puts ""
  end

  desc "Q++RS Autonomous Build and TestFlight Upload - Author: Jonathan Sherman"
  lane :release do
    puts "[Q++RS] Initializing Build System..."
    puts "[Q++RS] Author: #{AUTHOR} | Sovereign ID: #{SOVEREIGN_ID}"
    
    setup_ci
    
    key_file = ENV["ASC_KEY_FILE"] || File.expand_path("~/.private_keys/AuthKey_#{ENV['ASC_KEY_ID']}.p8")
    key_valid = ENV["KEY_VALID"] == "true"
    team_id = ENV["APPLE_TEAM_ID"]
    
    api_key = nil
    if key_valid && File.exist?(key_file)
      api_key = app_store_connect_api_key(
        key_id: ENV["ASC_KEY_ID"],
        issuer_id: ENV["ASC_ISSUER_ID"],
        key_filepath: key_file
      )
      puts "[Q++RS] API Key authenticated"
    else
      puts "[Q++RS] Build-only mode (no upload)"
    end
    
    puts "[Q++RS] Building archive..."
    
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M"),
      xcodeproj: "App/App.xcodeproj"
    )

    gym(
      workspace: "App/App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "build",
      output_name: "OracleAI.ipa",
      clean: true,
      xcargs: "-allowProvisioningUpdates",
      export_options: {
        signingStyle: "automatic",
        uploadSymbols: true,
        compileBitcode: false,
        teamID: team_id
      }
    )
    
    puts "[Q++RS] Build complete"

    if api_key
      puts "[Q++RS] Uploading to TestFlight..."
      pilot(
        api_key: api_key,
        skip_waiting_for_build_processing: true,
        changelog: "Q++RS Ultimate #{QPPRS_VERSION}\nAuthor: #{AUTHOR}\nSovereign ID: #{SOVEREIGN_ID}\nDate: #{Time.now.strftime('%Y-%m-%d %H:%M UTC')}"
      )
      puts ""
      puts "╔══════════════════════════════════════════════════════════════╗"
      puts "║  Q++RS ULTIMATE #{QPPRS_VERSION} - TESTFLIGHT UPLOAD COMPLETE         ║"
      puts "║  Author: #{AUTHOR}                                    ║"
      puts "╚══════════════════════════════════════════════════════════════╝"
    else
      puts ""
      puts "╔══════════════════════════════════════════════════════════════╗"
      puts "║  Q++RS ULTIMATE #{QPPRS_VERSION} - BUILD COMPLETE (IPA READY)        ║"
      puts "║  Author: #{AUTHOR}                                    ║"
      puts "║  Upload pending API key update                             ║"
      puts "╚══════════════════════════════════════════════════════════════╝"
    end
    puts ""
  end

  desc "Q++RS App Store Release - Submit to App Store Review - Author: Jonathan Sherman"
  lane :appstore do
    puts "[Q++RS] Initializing App Store Release..."
    puts "[Q++RS] Author: #{AUTHOR} | Sovereign ID: #{SOVEREIGN_ID}"
    
    setup_ci
    
    key_file = ENV["ASC_KEY_FILE"] || File.expand_path("~/.private_keys/AuthKey_#{ENV['ASC_KEY_ID']}.p8")
    
    puts "[Q++RS] Using key file: #{key_file}"
    
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: key_file
    )
    
    puts "[Q++RS] API Key authenticated for App Store"

    team_id = ENV["APPLE_TEAM_ID"]
    
    puts "[Q++RS] Building App Store archive..."
    
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M"),
      xcodeproj: "App/App.xcodeproj"
    )

    gym(
      workspace: "App/App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "build",
      output_name: "OracleAI.ipa",
      clean: true,
      xcargs: "-allowProvisioningUpdates -authenticationKeyPath '#{key_file}' -authenticationKeyID '#{ENV['ASC_KEY_ID']}' -authenticationKeyIssuerID '#{ENV['ASC_ISSUER_ID']}'",
      export_options: {
        signingStyle: "automatic",
        uploadSymbols: true,
        compileBitcode: false,
        teamID: team_id
      }
    )
    
    puts "[Q++RS] Uploading to App Store Connect..."

    deliver(
      api_key: api_key,
      submit_for_review: true,
      automatic_release: true,
      force: true,
      skip_screenshots: true,
      skip_metadata: false,
      precheck_include_in_app_purchases: false,
      submission_information: {
        add_id_info_uses_idfa: false,
        export_compliance_uses_encryption: false
      }
    )

    puts ""
    puts "╔══════════════════════════════════════════════════════════════╗"
    puts "║  Q++RS ULTIMATE #{QPPRS_VERSION} - APP STORE SUBMISSION COMPLETE     ║"
    puts "║  Author: #{AUTHOR}                                    ║"
    puts "║  Status: SUBMITTED FOR REVIEW                              ║"
    puts "╚══════════════════════════════════════════════════════════════╝"
    puts ""
  end

  error do |lane, exception|
    puts ""
    puts "╔══════════════════════════════════════════════════════════════╗"
    puts "║  Q++RS BUILD ERROR                                           ║"
    puts "╚══════════════════════════════════════════════════════════════╝"
    puts "Error: #{exception.message}"
    puts ""
  end
end
