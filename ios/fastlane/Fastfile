default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :release do
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    # Download or create provisioning profile
    sigh(
      api_key: api_key,
      app_identifier: "com.oracleai.app",
      readonly: false,
      force: true
    )

    # Update project signing settings
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "App/App.xcodeproj",
      team_id: ENV["APPLE_TEAM_ID"],
      profile_name: ENV["sigh_com.oracleai.app_appstore_profile-name"],
      code_sign_identity: "Apple Distribution"
    )

    # Build the app
    gym(
      workspace: "App/App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "build",
      output_name: "OracleAI.ipa",
      clean: true,
      export_options: {
        provisioningProfiles: {
          "com.oracleai.app" => ENV["sigh_com.oracleai.app_appstore_profile-name"]
        }
      }
    )

    # Upload to TestFlight
    pilot(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
