default_platform(:ios)

QPPRS_VERSION = "5.0"
BUNDLE_ID = "com.oracleai.app"
AUTHOR = "Jonathan Sherman"
SOVEREIGN_ID = 1
SOVEREIGN_TEAM_LOCK = true

platform :ios do
  before_all do
    puts ""
    puts "╔══════════════════════════════════════════════════════════════╗"
    puts "║     Q++RS ULTIMATE #{QPPRS_VERSION} - DIRECT APP STORE RELEASE          ║"
    puts "║                                                              ║"
    puts "║  Author: #{AUTHOR}                                    ║"
    puts "║  Sovereign ID: #{SOVEREIGN_ID}                                            ║"
    puts "║  Bundle: #{BUNDLE_ID}                              ║"
    puts "║  Team Access: SOVEREIGN ONLY                                 ║"
    puts "╚══════════════════════════════════════════════════════════════╝"
    puts ""
    
    if SOVEREIGN_TEAM_LOCK
      serial_bound = ENV["SERIAL_BOUND"] == "true"
      sovereign_hash = ENV["SERIAL_HASH"]
      
      unless serial_bound && sovereign_hash && sovereign_hash.length >= 16
        UI.user_error!("[Q++RS] ACCESS DENIED: Development Team locked to Jonathan Sherman (Sovereign ID: 1)")
      end
      
      puts "[Q++RS] ✓ Sovereign access verified: #{AUTHOR}"
      puts "[Q++RS] ✓ All other users BLOCKED from Development Team"
    end
  end

  desc "Q++RS Direct App Store Release - Author: Jonathan Sherman"
  lane :release do
    puts "[Q++RS] DIRECT APP STORE SUBMISSION"
    puts "[Q++RS] Author: #{AUTHOR} | Sovereign ID: #{SOVEREIGN_ID}"
    
    setup_ci
    
    key_file = ENV["ASC_KEY_FILE"] || File.expand_path("~/.private_keys/AuthKey_#{ENV['ASC_KEY_ID']}.p8")
    key_valid = ENV["KEY_VALID"] == "true"
    team_id = ENV["APPLE_TEAM_ID"]
    
    unless key_valid && File.exist?(key_file)
      UI.user_error!("[Q++RS] REQUIRES VALID API KEY - Set ASC_KEY_CONTENT_BASE64 in GitHub Secrets")
    end
    
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: key_file
    )
    puts "[Q++RS] ✓ API Key authenticated"
    
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M"),
      xcodeproj: "App/App.xcodeproj"
    )

    puts "[Q++RS] Building App Store archive..."
    gym(
      workspace: "App/App.xcworkspace",
      scheme: "App",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "build",
      output_name: "OracleAI.ipa",
      clean: true,
      xcargs: "DEVELOPMENT_TEAM='#{team_id}' CODE_SIGN_STYLE=Automatic -allowProvisioningUpdates",
      export_options: {
        signingStyle: "automatic",
        uploadSymbols: true,
        compileBitcode: false,
        teamID: team_id
      }
    )
    
    puts "[Q++RS] Uploading to App Store Connect..."
    upload_to_app_store(
      api_key: api_key,
      skip_screenshots: true,
      skip_metadata: true,
      skip_app_version_update: false,
      force: true,
      run_precheck_before_submit: false,
      submit_for_review: false,
      precheck_include_in_app_purchases: false
    )

    puts ""
    puts "╔══════════════════════════════════════════════════════════════╗"
    puts "║  Q++RS ULTIMATE #{QPPRS_VERSION} - UPLOADED TO APP STORE CONNECT       ║"
    puts "║  Author: #{AUTHOR}                                    ║"
    puts "║  Status: READY FOR MANUAL REVIEW SUBMISSION                  ║"
    puts "╚══════════════════════════════════════════════════════════════╝"
    puts ""
  end

  error do |lane, exception|
    puts ""
    puts "╔══════════════════════════════════════════════════════════════╗"
    puts "║  Q++RS BUILD ERROR                                           ║"
    puts "╚══════════════════════════════════════════════════════════════╝"
    puts "Error: #{exception.message}"
    puts ""
  end
end
